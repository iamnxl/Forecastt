@model IEnumerable<WebApplication1.Models.Forecast>

@{
    ViewBag.Title = "ForecastGHI";
}

<h2>Total GHI in next 6 hours: @ViewBag.Total</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FactoryID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Capacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ghi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EnviromentTemp)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FactoryID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Capacity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ghi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EnviromentTemp)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
